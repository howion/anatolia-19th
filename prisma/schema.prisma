generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Feature {
  id           Int               @id @default(autoincrement())
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  yearStart    Int
  yearEnd      Int?
  lat          Float
  lon          Float
  name         String            @db.VarChar(255)
  marker       Marker            @relation(fields: [markerId], references: [id])
  occupations  Occupation[]
  relationsF   Feature[]         @relation("FeatureRelations")
  relationsB   Feature[]         @relation("FeatureRelations")
  markdown     String            @default("") @db.VarChar(10000)
  sources      Source[]
  author       Author            @relation(fields: [authorId], references: [id])
  contributors Contributor[]
  activities   FeatureActivity[]

  markerId Int
  authorId Int

  @@index([markerId])
  @@index([authorId])
}

enum FeatureActivityType {
  COMMENT
  UPDATE
  NOTE
}

model FeatureActivity {
  id        Int                 @id @default(autoincrement())
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  type      FeatureActivityType
  owner     String              @db.VarChar(255)
  value     String              @db.VarChar(1000)
  Feature   Feature?            @relation(fields: [featureId], references: [id])
  featureId Int?

  @@index([featureId])
}

model Author {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @db.VarChar(255)

  Feature Feature[]
}

model Contributor {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @db.VarChar(255)
  email     String   @db.VarChar(255)

  Feature Feature[]
}

model Occupation {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(255)

  Feature Feature[]
}

model Marker {
  id    Int     @id @default(autoincrement())
  color String? @db.VarChar(255)
  icon  String? @db.VarChar(255)

  Feature Feature[]
}

model Source {
  id        Int     @id @default(autoincrement())
  shortName String  @unique
  source    String  @db.VarChar(255)
  url       String? @db.VarChar(255)

  Feature Feature[]
}
